{{>admin-header}}
<div class="m-5 pt-5">
    <div>
        <h2>Add Product</h2>
    </div>
    <div>
        <form action="/admin/addProduct" method="post" enctype="multipart/form-data">
        <div class="form-group my-3">
            <label for="nameInput">Name</label>
            <input type="text" class="form-control form-control-sm" id="nameInput" name="name" placeholder="Enter Name" required>
        </div>
        <div class="form-group my-3">
            <label for="nameInput">Price</label>
            <input type="number" class="form-control form-control-sm" id="nameInput" min="1" name="price" placeholder="Enter Price" required>
        </div>
        <div class="form-group my-3">
            <label for="nameInput">Stock</label>
            <input type="number" class="form-control form-control-sm" id="nameInput" min="1" name="stock" placeholder="Enter Stock" required>
        </div>
        <div class="form-group my-3 d-flex">
        <label for="dropdownMenuButton" class="pt-2 me-2">Category:</label>
        <div>
            <select class="form-select form-select-sm" name="category" aria-label="Default select example" required>
                {{#each categoryList}}
                    <option value="{{this.category}}">{{this.category}}</option>
                {{/each}}
            </select>
        </div>
        </div>
        <div class="form-group my-3">
            <label for="descriptionInput">Description</label>
            <textarea class="form-control form-control-sm" id="descriptionInput" name="description" rows="3" required></textarea>
        </div>
        <div class="form-group my-3">
            <label for="productImage">Add image: </label>
            <input type="file" class="form-control-file" multiple name="image" id="productImage" required>
        </div>
        <div>
            <p class="text-success">{{message}}</p>
        </div>
        <button type="submit" class="btn btn-primary my-3">Submit</button>
        </form>
    </div>
</div>

{{>user-footer}}