{{>admin-header}}
<div class="m-3 mt-4 pt-5 px-4">
<h3 class="my-2">Returned Orders</h3>
  <div class="mt-2">
    <table class="table mt-2" id="productsTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">User</th>
            <th scope="col">Mobile</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Amount</th>
            <th scope="col">Reason</th>
            <th scope="col">Picked</th>
            <th scope="col">Products</th>
        </tr>
    </thead>
    <tbody>
        {{#each returnDetails}}
            <tr>
                <td scope="col">{{inc @index}}</td>
                <td scope="col">{{this.user}}</td>
                <td scope="col">{{this.mobile}}</td>
                <td scope="col">{{this.email}}</td>
                <td scope="col">{{this.address}}</td>
                <td scope="col">{{this.total}}</td>
                <td scope="col">{{this.return.reason}}</td>
                <td scope="col"><a class="text-success text-decoration-none returnStatus" id="orderStatus" style="cursor: pointer;" data-bs-orderid="{{this._id}}" data-bs-toggle="modal" data-bs-target="#statusChange">
                  {{#if this.return.pickup}}
                  Picked
                  {{else}}
                  Pickup Pending
                  {{/if}}
                </a></td>
                    <!-- Modal -->
                    <div class="modal fade" id="statusChange" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Update Status</h5>
                            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <form action="/admin/pickupstatus" method="post">
                            <input type="text" name="orderid" id="orderDetails" hidden>
                            <select class="form-select" name="status" id="status">
                              <option value="false">Pickup Pending</option>
                              <option value="true">Picked</option>
                            </select>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Update Status</button>
                          </div>
                          </form>
                        </div>
                      </div>
                    </div>
                <td scope="col"><a href="/admin/returninfo/{{this._id}}">View</a></td>
            </tr>
        {{/each}}
    </tbody>
    </table>
  </div>
</div>


<script>
  $(function () {
    $('#productsTable').DataTable({
      order: [[1, 'asc']], // Sort by the second column by default
    rowCallback: function(row, data, index) {
      var api = this.api();
      var rowNum = api.page.info().start + index + 1;
      $(row).find('td:eq(0)').text(rowNum); // Assign the row number to the first column
    }
    });
  });

  // Get all the order buttons
var returnStatus = document.querySelectorAll('.returnStatus');

// Add a click event listener to each button
returnStatus.forEach(function(status) {
  status.addEventListener('click', function() {
    // Get the order ID from the status's data attribute
    var orderID = status.getAttribute('data-bs-orderid');
    console.log(orderID);
    // Access the order ID in the modal
    var orderDetailsElement = document.getElementById('orderDetails');
    orderDetailsElement.value = orderID;
  });
});
</script>