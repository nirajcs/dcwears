<!-- Start Header Area -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-dark main_box">
				<div class="container">
					<!-- Brand and toggle get grouped for better mobile display -->
					<i class="fa-solid fa-arrow-left mx-2" style="color: #ffffff; cursor: pointer;" onclick="history.back()"></i>
      				<a class="navbar-brand logo my-3 mx-2" href="/"><b>DC WEARS</b></a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
					 aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<ul class="nav navbar-nav menu_nav ml-auto" id="myList">
							<li class="nav-item {{#if homeActive}}active{{/if}}"><a class="nav-link" href="/">Home</a></li>
							<li class="nav-item {{#if productActive}}active{{/if}}"><a class="nav-link" href="/products">Products</a></li>
							<li class="nav-item {{#if orderActive}}active{{/if}}"><a class="nav-link" href="/orders">Orders</a></li>
							<li class="nav-item {{#if cartActive}}active{{/if}}"><a class="nav-link" href="/cart">Cart</a></li>
							<li class="nav-item {{#if wishlistActive}}active{{/if}}"><a class="nav-link" href="/wishlist">Wishlist</a></li>
							<li class="nav-item {{#if profileActive}}active{{/if}}"><a class="nav-link" href="/userprofile">Profile</a></li>
						</ul>
            {{#if session}}
                <div class="dropdown dropdown-right me-2 mx-4" style="background: transparent;">
                  <button class="btn dropdown-toggle text-white" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    {{username}}
                  </button>
                  <ul class="dropdown-menu">
                    <li class="p-2"><a href="/logout" class="text-decoration-none text-dark">Logout</a></li>
                  </ul>
                </div>
            {{else}}
                <div class="dropdown dropdown-right me-2 mx-4" style="background-color: transparent;">
                  <button class="btn dropdown-toggle text-white" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    User
                  </button>
                  <ul class="dropdown-menu">
                    <li class="mx-2"><a href="/login">Login</a></li>
                  </ul>
                </div>
            {{/if}}
					</div>
				</div>
			</nav>
		</div>
	</header>
	<!-- End Header Area -->
