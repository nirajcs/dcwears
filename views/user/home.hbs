    <div class="row">

    {{#each products}}
      <div class="col-lg-3 col-md-6 mb-4">
        <a href="/productload?id={{this._id}}" class="text-decoration-none">
        <div class="card">
          <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
            data-bs-ripple-color="light">
            <img src="/images/products/{{this.image.[2]}}"
              class="w-100" />
              <div class="hover-overlay">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
              </div>
          </div>
          <div class="card-body">
            <div href="" class="text-reset">
              <h5 class="card-title mb-2">{{this.name}}</h5>
            </div>
            <div href="" class="text-reset ">
              <p>{{this.category}}</p>
            </div>
            <h6 class="mb-3 price">₹{{this.price}}</h6>
          </div>
        </div>
        </a>
      </div>
    {{/each}}
    </div>

  </div>
</section>
  
