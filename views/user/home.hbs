
{{>user-header}}

	<!-- start banner Area -->
	<div class="carousel-inner" style="height: 100vh;">
      <img src="/images/banners/{{banner}}" class="d-block w-100" alt="Wild Landscape"/>
  </div>
	<!-- End banner Area -->

<!-- start new products -->
 <section class="mt-5 container">
	<h3 class="text-center my-3 text-decoration-underline">New Arrivals</h3>
  <div class="text-center">

    <div class="row">

    {{#each newProducts}}
      <div class="col-lg-3 col-md-6">
        <a href="/productload?id={{this._id}}" class="text-decoration-none">
        <div class="card">
          <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
            data-bs-ripple-color="light">
            <img src="/images/products/{{this.image.[2]}}"
              class="w-100" />
