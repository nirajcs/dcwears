{{>user-header}}
	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>PRODUCTS</h1>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->
	<div class="container mt-5">
		<div class="row">
			<div class="col-xl-3 col-lg-4 col-md-5">
				<div class="sidebar-categories" style="position: sticky; top: 100px;">
					<div class="head">Browse Categories</div>
					<ul class="main-categories">
						<li class="main-nav-list"><a href="/products">All</a></li>
						{{#each categoryList}}
							<li class="main-nav-list"><a href="/category?category={{this.category}}">{{this.category}}</a></li>
						{{/each}}
					</ul>
				</div>
			</div>
			<div class="col-xl-9 col-lg-8 col-md-7">
				<!-- Start Filter Bar -->
				<div class="filter-bar d-flex flex-wrap justify-content-between">
					<div class="dropdown my-2 mx-2">
						<button class="btn btn-secondary dropdown-toggle" style="width: 80px;background-color: transparent; color: #eee;" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Sort
						</button>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<a class="dropdown-item" href="/sortproducts?sort=1">Price:Low-High</a>
							<a class="dropdown-item" href="/sortproducts?sort=-1">Price:High-Low</a>
						</div>
					</div>
					<div class="my-2">
						<form action="/productsearch" class="w-auto d-flex" style="max-width: 12rem">
							<input type="text" class="form-control rounded-0" placeholder="Search" name="search" aria-label="Search">
							<input type="submit" class="btn btn-success" value="find">
						</form>
					</div>
				</div>
				<!-- End Filter Bar -->
				<!-- Start Best Seller -->
				<section class="mt-5">
					<div class="text-center">

						<div class="row">

							{{#each products}}
							<div class="col-lg-3 col-md-6 mb-4">
								<a href="/productload?id={{this._id}}" class="text-decoration-none">
								<div class="card rounded">
								<div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
									data-bs-ripple-color="light">
									<img src="/images/products/{{this.image.[2]}}"
									class="w-100" />
									<div class="hover-overlay">
										<div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
									</div>
								</div>
								<div class="card-body">
									<div href="" class="text-reset">
									<h5 class="card-title mb-2">{{this.name}}</h5>
									</div>
									<div href="" class="text-reset ">
									<p>{{this.category}}</p>
									</div>
									<h6 class="mb-3 price"><span style="font-family: none;">â‚¹</span>{{this.price}}</h6>
								</div>
								</div>
								</a>
							</div>
							{{/each}}
						</div>

					</div>
				</section>
				<!-- End Best Seller -->
			</div>
		</div>
	</div>

	{{> user-footer}}