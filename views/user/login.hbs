
{{>main-header}}
<!-- Section: Design Block -->
<div class="main-div">
    <section class=" text-center text-lg-start">
  <style>
    .rounded-t-5 {
      border-top-left-radius: 0.5rem;
      border-top-right-radius: 0.5rem;
    }

    @media (min-width: 992px) {
      .rounded-tr-lg-0 {
        border-top-right-radius: 0;
      }

      .rounded-bl-lg-5 {
        border-bottom-left-radius: 0.5rem;
      }
    }
  </style>
  <div class="container card mb-3">
    <div class="row g-0 d-flex align-items-center">
      <div class="col-lg-4 d-none p-0 d-lg-flex">
        <img src="/images/resources/dclogo.png" alt="DC Logo"
          class="w-100 rounded" />
      </div>
      <div class="col-lg-8">
        <div class="card-body py-2 px-md-5">

          <form action="/login" method="post">
            <div class="mb-2 text-center">
                <h2 class="mb-2">Log In</h2>
            </div>
            <!-- Email input -->
            <div class="form-outline my-2 text-left">
              <label class="form-label" for="form2Example1">Email address</label>
              <input type="email" id="form2Example1" name="email" class="form-control" required/>
            </div>

            <!-- Password input -->
            <div class="form-outline my-2 text-left">
              <label class="form-label" for="form2Example2">Password</label>
              <input type="password" id="form2Example2" name="password" class="form-control" required/>
            </div>

            <!-- Forget password input -->
            <div class="col my-2 d-flex justify-content-between">
              <a href="/otp">Log in using OTP</a>
              <a href="/forget">Forgot password?</a>
            </div>
            

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mt-2">Log in</button>
            <div class="mt-2">
                <p>New User? <a href="/register">Sign Up</a></p>
                <p class="text-danger">{{message}}</p>
            </div>

          </form>

        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->
</div>

{{>user-footer}}