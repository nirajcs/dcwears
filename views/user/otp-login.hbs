{{>main-header}}
<div class="main-div">
    <div class="card text-center" style="width: 30rem;">
    <div class="card-header h5 text-white bg-dark">Login using OTP</div>
    <div class="card-body px-5">
        <p class="card-text py-2">
            Enter your email address and we'll send you an email with instructions to login.
        </p>
        <form action="/otp" method="post">
            <div class="form-outline">
                <input type="email" name="email" id="typeEmail" class="form-control my-3" placeholder="Enter your email" required/>
            </div>
            <input type="submit" value="Send OTP" class="btn btn-dark w-100">
        </form>
        <p class="text-danger">{{message}}</p>
        <div class="d-flex justify-content-between mt-4">
            <a class="text-decoration-none" href="/login">Login</a>
            <a class="text-decoration-none" href="/register">Register</a>
        </div>
    </div>
</div>
</div>
{{>user-footer}}